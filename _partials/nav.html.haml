.navbar.navbar-inverse.navbar-fix#sticky-navbar
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed(data-toggle="collapse" data-target="#navbar-1")
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
    .collapse.navbar-collapse#navbar-1
      %ul.nav.navbar-nav
        %li{:class=>"#{'active' if page.output_path.start_with?('/index') }" }<
          %a(href="#{site.base_url}/index.html") Home
        %li{:class=>"#{'active' if page.output_path.start_with?('/downloads') }" }<
          %a(href="#{site.base_url}/downloads.html") Downloads
        %li{:class=>"#{'active' if page.output_path.start_with?('/docs') }" }<
          %a(href="#{site.base_url}/docs.html") Docs
        %li.dropdown
          %a.dropdown-toggle(href="#" data-toggle="dropdown")<
            = precede 'Community ' do
              %b.caret>
          %ul.dropdown-menu
            %li{:class=>"#{'active' if page.output_path.start_with?('/community') }" }<
              %a(href="#{site.base_url}/community.html") Join our Community
           
        %li{:class=>"#{'active' if page.output_path.start_with?('/issues') }" }<
          %a(href="http://issues.jboss.org/browse/UF") Issues
        %li{:class=>"#{'active' if page.output_path.start_with?('/source') }" }<
          %a(href="http://github.com/uberfire/uberfire") Source Code
        %li.dropdown
          %a.dropdown-toggle(href="#" data-toggle="dropdown")<
            = precede 'Follow Us ' do
              %b.caret>
          %ul.dropdown-menu.projectsocialmedia
            %li<
              %a(href="#")<
                %img(src="#{site.jborg_images_url}/common/socialmedia_icon40_twitter.png")
            %li<
              %a(href="https://groups.google.com/forum/#!forum/uberfire")<
                %img(src="#{site.jborg_images_url}/common/socialmedia_icon40_googleplus.png")
            %li<
              %a(href="#")<
                %img(src="#{site.jborg_images_url}/common/socialmedia_icon40_youtube.png")
           
     

= breadcrumb(page.real_page.output_path)
